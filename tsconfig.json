{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES6",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "preserveWatchOutput": true,
    "noEmit": true,
    "moduleResolution": "Node"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}